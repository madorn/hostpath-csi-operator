      # provisioner
      - name: csi-provisioner
        image: {{ image.sidecar.repo }}/csi-provisioner:v1.5.0
        imagePullPolicy: {{ image.sidecar.pull_policy }}
        args:
          - "--csi-address=/csi/csi.sock"
          - "--v={{ log_level }}"
          - "--feature-gates=Topology=true"
        volumeMounts:
          - name: socket-dir
            mountPath: /csi

      # attacher
      - name: csi-attacher
        image: {{ image.sidecar.repo }}/csi-attacher:v2.1.0
        imagePullPolicy: {{ image.sidecar.pull_policy }}
        args:
          - "--v={{ log_level }}"
          - "--csi-address=/csi/csi.sock"
        volumeMounts:
          - name: socket-dir
            mountPath: /csi

      # resizer
      - name: csi-resizer
        image: {{ image.sidecar.repo }}/csi-resizer:v0.4.0
        imagePullPolicy: {{ image.sidecar.pull_policy }}
        args:
          - "--v={{ log_level }}"
          - "--csi-address=/csi/csi.sock"
          - "--leader-election"
        volumeMounts:
          - name: socket-dir
            mountPath: /csi 

      serviceAccount: hostpath-csi-controller
      volumes:
        # This volume is where the socket for CSI sidecar->driver communication is done
        - name: socket-dir
          hostPath:
            path: /var/lib/kubelet/plugins/csi-hostpath
            type: DirectoryOrCreate
        - name: csi-data-dir
          hostPath:
            path: /var/lib/csi-hostpath-data/
